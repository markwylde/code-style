{
  "name": "@notes/api",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/src/main.js",
  "exports": {
    ".": "./dist/src/main.js"
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsx watch src/main.ts",
    "start": "node --enable-source-maps dist/src/main.js",
    "test": "npm run build && node --test \"dist/tests/**/*.test.js\"",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "tidy": "npm run lint:fix && npm run format:fix && npm run check:fix"
  },
  "dependencies": {
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node": "^24.5.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
